# Kernel
CONFIG_LOCALVERSION="-skyloft"

# DTBO
CONFIG_BUILD_ARM64_DT_OVERLAY=y

# QCACLD
CONFIG_QCA_CLD_WLAN=y
CONFIG_QCA_CLD_WLAN_PROFILE="qca6390"

# DebugFS
CONFIG_DEBUG_FS=n
CONFIG_MSM_TZ_LOG=n
CONFIG_CMA_DEBUGFS=n
CONFIG_REGMAP_ALLOW_WRITE_DEBUGFS=n
CONFIG_IPA_UT=n
CONFIG_IOMMU_TESTS=n
CONFIG_IOMMU_TESTS=n
CONFIG_QMP_DEBUGFS_CLIENT=n

# exFAT
CONFIG_EXFAT_FS=y

# Persistent store
CONFIG_PSTORE=y
CONFIG_PSTORE_CONSOLE=y
CONFIG_PSTORE_PMSG=y
CONFIG_PSTORE_RAM=y
CONFIG_CMDLINE="ramoops_memreserve=4M"
CONFIG_CMDLINE_EXTEND=y
CONFIG_BLK_WBT=y
CONFIG_BLK_WBT_SQ=y
CONFIG_MTD=y
CONFIG_MTD_BLOCK=y
CONFIG_MTD_OOPS=y
CONFIG_MTD_BLOCK2MTD=y

# Backlight
CONFIG_BACKLIGHT_KTZ8866=y
CONFIG_BACKLIGHT_DUALKTZ8866=y

# Camera motor
CONFIG_MOTOR_DRV8846=y

# GPS
CONFIG_AIROHA_GPS=y

# Hall sensor
CONFIG_HALL_AKM09970=y

# ION
CONFIG_ION_CAMERA_HEAP=y

# IR
CONFIG_RC_CORE=y
CONFIG_LIRC=y
CONFIG_RC_DECODERS=y
CONFIG_RC_DEVICES=y
CONFIG_IR_SPI_MI=y

# Keyboard
CONFIG_INPUT_XIAOMI_KEYBOARD=y
CONFIG_KEYBOARD_NANO_8030=y

# LED
CONFIG_LEDS_AW2015=y

# Power
CONFIG_FRAME_WARN=4096
CONFIG_SMB1355_SLAVE_CHARGER=n
CONFIG_SMB1390_CHARGE_PUMP_PSY=n
CONFIG_SMB1398_CHARGER=n

# Regulator
CONFIG_I2C_RETRY=y
CONFIG_REGULATOR_PM8008=y
CONFIG_REGULATOR_QCOM_RPMH=y

# Touchscreen
CONFIG_TOUCHSCREEN_FTS=n
CONFIG_TOUCHSCREEN_SYNAPTICS_DSX=n
CONFIG_TOUCHSCREEN_SYNAPTICS_TCM=n
CONFIG_TOUCHSCREEN_ST=n

# USB
CONFIG_PS5169=y

# Disable QTI Haptics
# CONFIG_INPUT_QTI_HAPTICS is not set

# Vibrator
CONFIG_INPUT_AW8697_HAPTIC=y
CONFIG_INPUT_AW86927_HAPTIC=y

# Disable Unused Modules
# CONFIG_WIL6210 is not set
# CONFIG_MSM_RDBG is not set
# CONFIG_USB_GSPCA is not set
# CONFIG_DVB_MPQ is not set
# CONFIG_MSM_11AD is not set
# CONFIG_QCOM_LLCC_PERFMON is not set

# Disable Modules signature
# CONFIG_MODULE_SIG is not set

# Force load modules
CONFIG_MODULE_FORCE_LOAD=y

# Enable WIREGUARD VPN support
CONFIG_WIREGUARD=y

# Enable XFRM_MIGRATE
CONFIG_XFRM_MIGRATE=y

# Enable BLAKE2b support
CONFIG_CRYPTO_BLAKE2B=y

# Initialize locals with zeroes
CONFIG_INIT_STACK_ALL_ZERO=y

# Enable CONFIG_INIT_ON_ALLOC_DEFAULT_ON
CONFIG_INIT_ON_ALLOC_DEFAULT_ON=y

# unset unused DM_CRYPT Kconfig
# CONFIG_DM_CRYPT is not set

# Remove unused configs
# CONFIG_RD_BZIP2 is not set
# CONFIG_RD_LZMA is not set
# CONFIG_SYSFS_SYSCALL is not set
# CONFIG_CPU_FREQ_GOV_ONDEMAND is not set
# CONFIG_CPU_FREQ_GOV_CONSERVATIVE is not set
# CONFIG_CHR_DEV_SCH is not set
# CONFIG_VGA_ARB is not set
# CONFIG_QCOM_MINIDUMP is not set

# Set CONFIG_DEFAULT_MMAP_MIN_ADDR to 32768
CONFIG_DEFAULT_MMAP_MIN_ADDR=32768

# Do not select CONFIG_FB for CONFIG_DRM
# CONFIG_FB_ARMCLCD is not set
CONFIG_BACKLIGHT_LCD_SUPPORT=y
CONFIG_BACKLIGHT_CLASS_DEVICE=y
# CONFIG_LOGO is not set

# Enable CONFIG_ION_SYSTEM_HEAP
CONFIG_ION_SYSTEM_HEAP=y

# Disable BALANCE_ANON_FILE_RECLAIM
# CONFIG_BALANCE_ANON_FILE_RECLAIM is not set

# Disable ION_POOL_AUTO_REFILL
# CONFIG_ION_POOL_AUTO_REFILL is not set

# Enable CONFIG_CRYPTO_CHACHA20POLY1305
CONFIG_CRYPTO_CHACHA20POLY1305=y

# Disable CONFIG_RSEQ
# CONFIG_RSEQ is not set
